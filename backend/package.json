{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "WebSocket backend for chat application",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t chat-backend .",
    "docker:run": "docker run -p 8080:8080 chat-backend",
    "docker:push": "docker push gcr.io/$GCP_PROJECT/chat-backend",
    "deploy:staging": "gcloud run deploy chat-backend-staging --image gcr.io/$GCP_PROJECT/chat-backend --platform managed --region us-central1 --allow-unauthenticated --port 8080",
    "deploy:prod": "gcloud run deploy chat-backend --image gcr.io/$GCP_PROJECT/chat-backend --platform managed --region us-central1 --allow-unauthenticated --port 8080 --min-instances 1 --max-instances 10"
  },
  "dependencies": {
    "@types/pg": "^8.16.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "websocket",
    "chat",
    "firebase"
  ],
  "author": "",
  "license": "ISC"
}
